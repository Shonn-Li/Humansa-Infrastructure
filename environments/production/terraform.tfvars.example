# Example Terraform variables file for Production Environment
# Copy this to terraform.tfvars and fill in your values

# AWS Configuration
aws_region = "ap-east-1"

# Database Configuration
db_username = "humansa_admin"
db_password = "CHANGE_ME_TO_SECURE_PASSWORD"
db_name     = "humansa"

# Domain & Route53 Configuration
domain_name     = "humansa.youwo.ai"
route53_zone_id = "Z1234567890ABC" # Get from your youwo.ai hosted zone

# API Tokens for Authentication
api_tokens = [
  "SECURE_TOKEN_1_CHANGE_ME",
  "SECURE_TOKEN_2_CHANGE_ME",
  "SECURE_TOKEN_3_CHANGE_ME"
]

# Instance Configuration
instance_type     = "t3.medium"
min_instances     = 2
desired_instances = 2
max_instances     = 4

# Monitoring
alarm_email = "alerts@youwo.ai"

# GitHub Configuration
github_pat  = "ghp_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
github_repo = "youwoai/humansa-ml-server"

# SSH Key (public key for EC2 access)
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2E... your-key@example.com"

# Production Settings
enable_deletion_protection = true
db_deletion_protection     = true
db_skip_final_snapshot     = false
db_multi_az               = false  # Set to true for high availability