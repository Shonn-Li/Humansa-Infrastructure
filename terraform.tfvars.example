# Example Terraform variables file
# Copy this to terraform.tfvars and fill in your values

# AWS Region - Hong Kong is closest to mainland China
aws_region = "ap-east-1"

# Environment
environment = "production"

# Database Configuration
db_username = "humansa_admin"
db_password = "CHANGE_ME_TO_SECURE_PASSWORD"
db_name     = "humansa"

# Route53 Configuration
# Get this from your existing youwo.ai hosted zone
route53_zone_id = "Z1234567890ABC"

# API Tokens for Authentication
# Generate secure tokens for API access
api_tokens = [
  "SECURE_TOKEN_1",
  "SECURE_TOKEN_2",
  "SECURE_TOKEN_3"
]

# Instance Configuration
instance_type     = "t3.medium"
min_instances     = 2
desired_instances = 2
max_instances     = 4

# Redis Configuration
redis_node_type = "cache.t3.micro"
redis_num_nodes = 1

# Monitoring
alarm_email = "alerts@youwo.ai"

# GitHub Configuration
github_pat  = "ghp_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
github_repo = "youwoai/humansa-ml-server"

# SSH Key (public key for EC2 access)
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2E... your-key@example.com"